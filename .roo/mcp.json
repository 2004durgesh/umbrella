{
  "mcpServers": {
    "github.com/modelcontextprotocol/servers/tree/main/src/filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/dev/rn/umbrella"
      ],
      "alwaysAllow": [
        "read_file",
        "read_multiple_files",
        "edit_file",
        "create_directory",
        "list_directory",
        "list_directory_with_sizes",
        "move_file",
        "search_files",
        "get_file_info",
        "list_allowed_directories",
        "directory_tree"
      ]
    }
  }
}